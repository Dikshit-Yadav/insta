<%- include('partials/header', { title: 'Sign Up - Instagram Clone' }) %>

  <div class="login-box">
    <h1 style="font-family: 'Billabong', cursive; font-size: 3rem;">Instagram</h1>
    <p>Sign up to see photos and videos from your friends.</p>

    <button class="btn-primary" style="background-color: #0095f6; width: 100%; margin-bottom: 15px;">
      <i class="fab fa-facebook-square"></i> Log in with Facebook
    </button>

    <div class="divider">OR</div>

    <form action="/auth/register" method="POST">
      <input type="text" class="form-control" name="username" placeholder="Username" required>
      <input type="email" class="form-control" name="email" placeholder="Email" required>
      <input type="password" class="form-control" name="password" placeholder="Password" required>

      <p style="font-size: 12px; color: #ccc; margin: 10px 0;">
        People who use our service may have uploaded your contact information to Instagram.
        <a href="#" style="color: #0095f6;">Learn More</a>
      </p>

      <p style="font-size: 12px; color: #ccc;">
        By signing up, you agree to our
        <a href="#">Terms</a>,
        <a href="#">Privacy Policy</a> and
        <a href="#">Cookies Policy</a>.
      </p>

      <button type="submit" class="btn-primary" style="margin-top: 10px;">Sign up</button>

      <p class="form-text">
        Have an account? <a href="/auth/login">Log in</a>
      </p>
    </form>
  </div>

  <%- include('partials/footer') %>