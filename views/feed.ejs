<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Your Feed</title>
  <link rel="stylesheet" href="/css/feed.css">
</head>

<body>
  <h1>Welcome, <%= user.username %></h1>
  <a href="/posts/upload">Upload New Post</a>

  <div class="feed">
    <% posts.forEach(post => { %>
      <div class="post">
        <div class="post-header">
          <% if (post.userId) { %>
            <img src="/uploads/<%= post.userId.profilePic || 'defaultProfilePic.jpg' %>" alt="Profile">
            <span><%= post.userId.username %></span>
          <% } else { %>
            <p>Unknown User</p>
          <% } %>
        </div>
        <img src="<%= post.postImage %>" class="post-img">
        <p><%= post.caption %></p>
      </div>
    <% }) %>
  </div>

  <div class="suggested-posts">
    <h2>Suggested for You</h2>
    <% suggestedPosts.forEach(post => { %>
      <div class="post">
        <div class="post-header">
          <% if (post.userId) { %>
            <img src="/uploads/<%= post.userId.profilePic || 'defaultProfilePic.jpg' %>" alt="Profile">
            <span><%= post.userId.username %></span>
          <% } else { %>
            <p>Unknown User</p>
          <% } %>
        </div>
        <img src="<%= post.postImage %>" class="post-img">
        <p><strong><%= post.userId ? post.userId.username : 'Unknown User' %>:</strong> <%= post.caption %></p>
      </div>
    <% }) %>
  </div>
</body>

</html>
