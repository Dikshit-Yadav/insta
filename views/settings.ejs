<%- include('partials/header', { title: 'Profile Settings' }) %>
<%- include('partials/sidebar') %>

<div class="settings-container">
  <h1>Profile Settings</h1>

  <form action="/settings" method="POST" enctype="multipart/form-data">

    <div class="input-group">
      <label>Current Profile Picture:</label>
      <img src="/uploads/<%= user.profilePic ? user.profilePic : 'default.jpg' %>" alt="Profile Picture" class="profile-pic">
    </div>

    <div class="input-group">
      <label for="profilePicFile">Upload New Profile Picture</label>
      <input type="file" id="profilePicFile" name="profilePicFile" accept="image/*" />
    </div>

    <div class="input-group">
      <label for="username">Username</label>
      <input type="text" id="username" name="username" value="<%= user.username %>" required />
    </div>

    <div class="input-group">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" value="<%= user.email %>" required />
    </div>

    <div class="input-group">
      <label for="bio">Bio</label>
      <textarea id="bio" name="bio" placeholder="Tell something about yourself..."><%= user.bio %></textarea>
    </div>

    <div class="input-group">
      <label for="password">New Password (leave blank if unchanged)</label>
      <input type="password" id="password" name="password" />
    </div>

    <button type="submit" class="save-button">Save Changes</button>

  </form>
</div>

<%- include('partials/footer') %>
